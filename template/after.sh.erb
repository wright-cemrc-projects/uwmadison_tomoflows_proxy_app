#!/bin/bash

# Wait for the TomoFlows server to start
echo "Waiting for TomoFlows server to open port ${port}..."
if wait_until_port_used "${host}:${port}" 600; then
  echo "Discovered TomoFlows server listening on port ${port}!"
else
  echo "Timed out waiting for TomoFlows server to open port ${port}!"
  clean_up 1
fi
sleep 2

